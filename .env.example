# FunctionalFit Docker Compose Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Nginx exposed port
NGINX_PORT=8080

# MySQL exposed port
MYSQL_PORT=3306

# Redis exposed port
REDIS_PORT=6379

# Vite dev server port
VITE_PORT=5173

# =============================================================================
# APPLICATION
# =============================================================================
APP_ENV=local
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=true
APP_URL=http://localhost:8080

# =============================================================================
# DATABASE
# =============================================================================
DB_DATABASE=functionalfit_db
DB_USERNAME=functionalfit
DB_PASSWORD=functionalfit_secure_password_2024
DB_ROOT_PASSWORD=root_secure_password_2024

# =============================================================================
# REDIS
# =============================================================================
REDIS_PASSWORD=functionalfit_redis_secret_2024

# =============================================================================
# MAIL (Development - use Mailtrap or similar)
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username
MAIL_PASSWORD=your_mailtrap_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@functionalfit.local
MAIL_FROM_NAME=FunctionalFit

# =============================================================================
# GOOGLE CALENDAR API (Push-only Sync)
# =============================================================================
# Enable/disable Google Calendar synchronization
GOOGLE_CALENDAR_SYNC_ENABLED=false

# OAuth2 credentials (for user-delegated access)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8080/api/auth/google/callback

# Service account authentication (recommended for backend-to-backend sync)
# Path to the service account JSON key file
GOOGLE_SERVICE_ACCOUNT_PATH=storage/app/google-service-account.json

# Application name for Google API
GOOGLE_CALENDAR_APP_NAME=FunctionalFit Calendar

# =============================================================================
# WOOCOMMERCE
# =============================================================================
WOOCOMMERCE_WEBHOOK_SECRET=
WOOCOMMERCE_API_URL=
WOOCOMMERCE_CONSUMER_KEY=
WOOCOMMERCE_CONSUMER_SECRET=

# =============================================================================
# STRIPE
# =============================================================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# =============================================================================
# FRONTEND
# =============================================================================
VITE_API_URL=http://localhost:8080/api
VITE_APP_NAME=FunctionalFit

# =============================================================================
# TIMEZONE
# =============================================================================
TIMEZONE=Europe/Budapest
